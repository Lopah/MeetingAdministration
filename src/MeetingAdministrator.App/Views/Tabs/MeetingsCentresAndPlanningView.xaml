<UserControl x:Class="MeetingAdministrator.App.Views.Tabs.MeetingCentresAndPlanningView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MeetingAdministrator.App.Views.Tabs"
             xmlns:vm="clr-namespace:MeetingAdministrator.App.ViewModels.TabControls.Tabs"
             xmlns:view="clr-namespace:MeetingAdministrator.App.Views.Lists"
             xmlns:vmdetail="clr-namespace:MeetingAdministrator.App.ViewModels.Details"
             xmlns:vdetail="clr-namespace:MeetingAdministrator.App.Views.Details"
             xmlns:vmlist="clr-namespace:MeetingAdministrator.App.ViewModels.Lists"
             xmlns:vlist="clr-namespace:MeetingAdministrator.App.Views.Lists"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="900">
    <UserControl.Resources>
        <!-- FIXME: This causes a stackoverflow <vm:MeetingsCentresAndRoomsViewModel x:Key="ViewModel"/>-->
        <!--<vmlist:MeetingCentresListViewModel x:Key="CentresList" />
        <vmlist:MeetingRoomsListViewModel x:Key="RoomsList" />-->
    </UserControl.Resources>
    <Grid Background="White" Margin="15 0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="4*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5*" />

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="5" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="15,0" Grid.Column="2">
            <vdetail:MeetingRoomsDetailView DataContext="{Binding MeetingRoomViewModel, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel Grid.Row="5" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="15,0">
          <vdetail:MeetingCentresDetailView DataContext="{Binding MeetingCentreViewModel, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <!--FIXME: DEJ DO PICE STACKPANELY-->
        
        <vlist:ListView Grid.Row="3" Grid.ColumnSpan="2" Margin="15,0" DataContext="{Binding MeetingCentresListViewModel}" />
        <vlist:ListView Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="2" Margin="15,0" DataContext="{Binding MeetingRoomsListViewModel}" />
    </Grid>
</UserControl>
